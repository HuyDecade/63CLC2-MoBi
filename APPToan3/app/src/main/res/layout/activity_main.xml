<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#69B66C"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#5199D3"
        android:gravity="center"
        android:text="Trắc Nghiệm"
        android:textColor="#5D4037"
        android:textSize="30sp"
        android:textStyle="bold"></TextView>

    <Spinner
        android:id="@+id/spinner_category"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:minHeight="48dp"></Spinner>

    <TextView
        android:id="@+id/textview_high_score"
        android:textColor="#9844A6"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="Điểm Cao Nhất : 1000"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <Button
        android:id="@+id/button_start_question"
        android:textColor="#272525"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>



</LinearLayout>